    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "views.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Celery Worker",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/redis_like/celery_worker.py",  
            "args": [
                "-A",
                "celery_worker",  
                "worker",
                "--loglevel=info" 
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "CELERY_BROKER_URL": "redis://localhost:6379/0",  
                "CELERY_RESULT_BACKEND": "redis://localhost:6379/0"  
            },
            "console": "integratedTerminal",
            "stopOnEntry": false,
        }
    ]
}